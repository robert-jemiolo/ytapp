<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".videolist.ListmenuFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/menuListButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_home" />

        <Button
            android:id="@+id/menuHistoryButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_history" />

        <Button
            android:id="@+id/menuLastPreviewButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_play" />

        <Button
            android:id="@+id/menuAuthor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="A" />
    </LinearLayout>

</FrameLayout>
